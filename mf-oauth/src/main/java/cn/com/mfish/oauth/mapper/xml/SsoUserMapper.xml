<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.mfish.oauth.mapper.SsoUserMapper">
    <insert id="insert" parameterType="cn.com.mfish.oauth.entity.SsoUser">
        insert into sso_user(id,account,phone,email,password,old_password,nickname,head_img_url
            ,telephone,birthday,sex,status,salt,openid,create_time)
        values(#{id},#{account},#{phone},#{email},#{password},#{old_password},#{nickname},#{headImgUrl},#{telephone}
                  ,#{birthday},#{sex},#{status},#{salt},#{openid},now())
    </insert>
    <update id="update">
        update sso_user t
        <set>
            <if test="account != null">
                account = #{account},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="oldPassword != null">
                old_password = #{oldPassword},
            </if>
            <if test="nickname != null">
                nickname = #{nickname},
            </if>
            <if test="headImgUrl != null">
                head_img_url = #{headImgUrl},
            </if>
            <if test="telephone != null">
                telephone = #{telephone},
            </if>
            <if test="birthday != null">
                birthday = #{birthday},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="salt != null">
                salt = #{salt},
            </if>
            <if test="openid != null">
                openid = #{openid},
            </if>
            update_time = #{updateTime}
        </set>
        where t.id = #{id}
    </update>
    <select id="getUserByAccount" resultType="cn.com.mfish.oauth.entity.SsoUser">
        select * from sso_user
        <where>
            1!=1
            <if test="account != null and account != ''">
                or account = #{account}
                or phone = #{account}
                or email = #{account}
                or id = #{account}
            </if>
        </where>
    </select>
</mapper>